# Example environment variables
# Copy this file to `.env` and fill in actual values. Do NOT commit `.env`.
VITE_BASE44_APP_ID=your_app_id_here
# Add other variables as you migrate (e.g., API endpoints, keys)

# --- Backend server ---
PORT=8787
CORS_ORIGIN=http://localhost:5173

# --- Supabase ---
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# --- OpenAI ---
OPENAI_API_KEY=

# --- Frontend (Vite) ---
VITE_API_URL=http://localhost:8787
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_BASE44_APP_ID= # no longer used; safe to remove once migrated fully

# --- Shopify App ---
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SCOPES=read_products,read_orders,write_products,read_script_tags,write_script_tags
SHOPIFY_APP_URL=https://api.gimmie.ai

# --- Production & Security ---
NODE_ENV=production
ENFORCE_HTTPS=1
CORS_ORIGIN=https://app.gimmie.ai,https://www.gimmie.ai

# --- Redis (queues & distributed rate limits) ---
REDIS_URL=redis://localhost:6379

# --- Cloudflare / IP Allowlist for webhooks ---
CF_IP_ALLOWLIST=

# --- Distributed per-store limiter ---
SEARCH_LIMIT_POINTS=120
SEARCH_LIMIT_DURATION=60
SEARCH_LIMIT_BLOCK_DURATION=60

# --- Per-user & per-IP tiers ---
USER_LIMIT_POINTS=90
USER_LIMIT_DURATION=60
USER_LIMIT_BLOCK_DURATION=60
ANON_IP_LIMIT_POINTS=60
ANON_IP_LIMIT_DURATION=60
ANON_IP_LIMIT_BLOCK_DURATION=120
AUTH_IP_LIMIT_POINTS=80
AUTH_IP_LIMIT_DURATION=60
AUTH_IP_LIMIT_BLOCK_DURATION=90
